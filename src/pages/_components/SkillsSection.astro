---
import Section from '@components/Section.astro';
import Title from './Title.astro';
import HStack from './HStack.astro';
import Badge from './Badge.astro';

interface Props {
  skills: string[];
  class?: string;
}

const { skills, class: className, ...rest } = Astro.props;
---

<Section class={className} noBreak {...rest}>
  <Title level="section" text="Skills" />
  <HStack gap="1" wrap>
    {skills.map((item) => <Badge text={item} accent />)}
  </HStack>
</Section>
