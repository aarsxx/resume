---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  src: ImageMetadata;
  alt: string;
  class?: string;
}

const { class: className, src, alt, ...rest } = Astro.props;
---

<Image
  class="w-36 h-36 object-cover rounded-lg sepia-[.50]"
  src={src}
  alt={alt}
  loading="eager"
  {...rest}
/>
