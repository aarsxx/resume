---
const { class: className, ...rest } = Astro.props;
---

<div class:list={["page_root", className]} {...rest}>
  <slot/>
</div>

<style>
.page_root {
  width: 21cm;
  height: 29.68cm;
  page-break-after: auto;
  overflow: hidden;

  box-shadow: 5px 8px 9px 0px rgba(0, 0, 0, 0.4),
    5px 8px 30px 0px rgba(0, 0, 0, 0.2);
}

@media print {
  .page_root {
    border: none;
    box-shadow: none;
  }
}
</style>
